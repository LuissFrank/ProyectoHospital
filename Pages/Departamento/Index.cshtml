@page
@model NewApp._Pages_Departamento.IndexModel




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create" class="btn btn-primary">Crear Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Departamento[0].Especialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Departamento) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.Id">Editar</a> 
                <a asp-page="./Details" class="btn btn-info" asp-route-id="@item.Id">Detalles</a> 
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
