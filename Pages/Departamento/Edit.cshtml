@page
@model NewApp._Pages_Departamento.EditModel




<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Departamento.Id" />
            <div class="form-group">
                <label asp-for="Departamento.Especialidad" class="control-label"></label>
                <input asp-for="Departamento.Especialidad" class="form-control" />
                <span asp-validation-for="Departamento.Especialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-primary">Volver</a>
</div>

